    <script src="https://kit.fontawesome.com/4d231c993f.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</head>

<body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        {{> adminnavbar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- style="background-color:#012840;" --}}
                <nav class="navbar navbar-expand navbar-light bg-light topbar mb-4 static-top shadow" > 


                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"> {{#each userData}} {{ name }}  {{/each}}</span>
                                {{#each userData}}
                                <img class="img-profile rounded-circle" src="/{{ user_avatar }} ">
                                {{/each}}
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/admin-profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                    
                    <h1 class="h3 mb-0 text-warning "> <strong>View Results</strong></h1> 
                    {{#if success}}
                    <div class="alert alert-success alert-dismissible fade-out"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i></strong>
                    {{ success }}
                    </div>
                    {{/if}}
                    {{#if message}}
                    <div class="alert alert-danger alert-dismissible fade-out"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i></strong>
                    {{ message }}
                    </div>
                    {{/if}}
                    </div>
                
                    <!-- Content Row -->
                    
                    <div class="row">

                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fa-solid fa-square-poll-vertical fa-sm fa-fw mr-2"></i>Results</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body text-dark">
                                        
                                        <br><br>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                <h2 class="text-center text-info"> <strong>ECDSA</strong> </h2>
                                                <br>
                                                <center>
                                                
                                                    {{#if notdone}}

                                                    <div class="row">
                                                    <div class="col-xl-3"></div>
                                                    <div class="col-xl-6">
                                                    <h1><i class="fa-solid fa-envelope-circle-check"></i></h1>
                                                    <br><br>
                                                    
                                                    
                                                    <select class="form-control" name="election_department" required>
                                                        <option value="">Choose Department</option>
                                                        {{#each departmentData}}
                                                        <option value="{{department}}">{{department}}</option>
                                                        {{/each}}
                                                    </select>

                                                    </div>
                                                    <div class="col-xl-3"></div>
                                                    </div>
                                                    <br><br>
                                                    
                                                    <br><br><br><br>
                                                    <button type="button" class="btn btn-info mb-2" style="width: 100%;"  data-toggle="modal" data-target="#confirmModal"><i class="fa-solid fa-envelope-circle-check fa-fw mr-2"></i>Validate Election Through ECDSA</button>
                                                    
                                                    {{/if}}
                                                

                                                
                                                    {{#if done}}
                                                    <h1><i class="fa-solid fa-circle-check text-success"></i></h1>
                                                    <h1 class="text-success">{{ done }}</h1>
                                                        {{#if time}} 
                                                        <i class="text-secondary">
                                                        Validation took, {{ time }} 
                                                        </i>
                                                        {{/if}}
                                                    <br><br>
                                                    <button type="submit" class="btn btn-success mb-2" style="width: 100%;" ><i class="fa-solid fa-trophy fa-fw mr-2"></i></i>View Winner</button>
                                                    {{/if}}
                                                
                                                </center>

                                                
                                                    
                                                    {{!-- <button type="button" class="btn btn-success mb-2" style="width: 100%;" disabled><i class="fa-solid fa-trophy fa-fw mr-2" ></i>View Winner</button>   --}}
                                                    {{!-- <select class="form-control" name="election_department" required>
                                                        <option value="">Choose Department</option>
                                                        {{#each departmentData}}
                                                        <option value="{{election_department}}">{{election_department}}</option>
                                                        {{/each}}
                                                    </select> --}}
                                            </div>
                                            {{!-- <div class="col-xl-6">
                                                <h2 class="text-center text-info"> <strong>RSA</strong> </h2>
                                                                                                <br>
                                                <center>
                                                <h1><i class="fa-solid fa-envelope-circle-check"></i></h1>
                                                </center>
                                                <br><br><br><br>
                                                <button type="button" class="btn btn-info mb-2" style="width: 100%;"><i class="fa-solid fa-envelope-circle-check fa-fw mr-2"></i>Validate Election Through RSA</button>
                                                <button type="button" class="btn btn-success mb-2" style="width: 100%;" disabled><i class="fa-solid fa-trophy fa-fw mr-2" ></i>View Winner</button> 

                                            </div> --}}
                                        </div>
                                        
                                        
                                        
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End Content Row -->
                    <!-- Content Row -->
                    
                    
                    <!-- Content Row -->

                    
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; E-VOTING 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


    <div class="modal fade" id="confirmModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">

        <div class="modal-dialog modal-lg" role="document" >
            <div class="modal-content ">
                <div class="modal-header">
                <h4 class="modal-title text-danger" id="exampleModalLabel"><strong>Election Results</strong></h4>
                   
                </div>
                <div class="modal-body">
                            <br>

                            
                                <div class="row">
                                    <div class="col-xl-1"></div>
                                    <div class="col-xl-10">
                                        {{#if winner}} 
                                        
                                        <br>
                                        <center>
                                        <div class="alert alert-success">
                                        <b class="text-success"><i class="fa-solid fa-trophy"></i> Winner: <i class="text-danger"> {{winner}} </i></b>
                                        </div>
                                        </center>
                                        <br>
                                        <h5><b class="text-info">
                                        Election Details <br>
                                        Department: <i class="text-danger">{{#if department}} {{department}} {{/if}} </i><br>
                                        Position: <i class="text-danger">{{#if position}} {{position}} {{/if}} </i><br>
                                        </b></h5
                                        <br><br>
                                        {{/if}}
                                        <table class="table table-hover">
                                        <thead>
                                            <tr>
                                            <th scope="col" class="text-info">Candidate Name</th>
                                            {{!-- <th scope="col">Department</th>
                                            <th scope="col">Position</th> --}}
                                            <th scope="col" class="text-info">Votes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each viewWinner}}
                                            <tr>
                                            <th scope="row">
                                                
                                                <h6><b class="text-secondary"><i>{{candidate_name}}</i></h3></b></h6>
                                                
                                            </td>
                                            <td>
                                            
                                                <h6><b class="text-secondary"><i>{{Votes}}</i></h3></b></h6>
                                        
                                            </td>
                                            </tr>
                                            <tr>
                                            {{/each}}
                                        </tbody>
                                        </table>
                                    </div>
                                    <div class="col-xl-1"></div>
                                </div>

                            
                </div>
                <div class="modal-footer">
                    <form action="/auth/admin-declare-winner-rsa" method="POST">
                    {{#if department}}
                    <input type="hidden" value="{{department}}" name="candidate_department">
                    {{/if}}
                    {{#if position}}
                    <input type="hidden" value="{{position}}" name="candidate_position">
                    {{/if}}
                    {{#if winner}}
                    <input type="hidden" value="{{winner}}" name="candidate_name">
                    {{/if}}
                    {{#if candidate_id}}
                    <input type="hidden" value="{{candidate_id}}" name="candidate_id">
                    {{/if}}
                    {{#if candidate_votes}}
                    <input type="hidden" value="{{candidate_votes}}" name="candidate_votes">
                    {{/if}}
                    
                    <button type="submit" class="btn btn-success">Declare Winner</button>
                    </form>
                    <a href="/admin-view-results-rsa"><button class="btn btn-danger">Cancel</button></a>
                </div>
            </div>
        </div>

    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="/template/vendor/jquery/jquery.min.js"></script>
    <script src="/template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/template/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/template/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/template/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/template/js/demo/chart-area-demo.js"></script>
    <script src="/template/js/demo/chart-pie-demo.js"></script>

<script type="text/javascript">
    $(window).on('load', function() {
        $('#confirmModal').modal('show');
        
    });
</script>

    <script>

        var date = new Date();
        var day = date.getDate();
        var month = (date.getMonth())+1;
        var year = date.getUTCFullYear();

        if (day < 10) {
            day = "0"+day;
        }

        if (month < 10) {
            month = "0"+month;
        }

        var minDate = year+"-"+month+"-"+day;


        document.getElementById("election_start_date").setAttribute('min', minDate);
        document.getElementById("election_end_date").setAttribute('min', minDate);

        console.log(minDate);

    </script>

    

</body>



</html>