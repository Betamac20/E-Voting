                        <!-- President Area -->
                        <div class="col-xl-6 col-lg-7">
                            <form action="/auth/verify-code" method="POST">
                            <div class="card shadow mb-4">

                                    <!-- Card Header - Dropdown -->
                                    <div class="card-header py-3 d-flex flex-row text-white align-items-center justify-content-between" style="background-color: #04668C;">
                                        <h3 class="m-0 font-weight-bold" >
                                        <i class="fas fa-cogs fa-sm fa-fw mr-2 "></i> Verify Email</h3>
                                    </div>
                                    <!-- Card Body -->
                                    <div class="card-body">
                                                                <div class="alert alert-info d-flex align-items-center" role="alert">
                                                                    <div class="input-group">
                                                                        <span><i class="fa-solid fa-triangle-exclamation"></i></span> &nbsp;&nbsp;&nbsp; <strong>We sent a verification code on your email. </strong>
                                                                    </div>
                                                                </div> 
                                                        {{!-- Begin of Alert  --}}
                                                        {{#if message}}
                                                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                                    <div class="input-group">
                                                                        <span><i class="fa-solid fa-triangle-exclamation"></i></span> &nbsp;&nbsp;&nbsp; <strong>{{message}}</strong>
                                                                    </div>
                                                                </div>                                             
                                                        {{/if}}
                                                        {{#if success}}
                                                                <div class="alert alert-success d-flex align-items-center"  role="alert">
                                                                    <div class="input-group">
                                                                        <span><i class="fa-solid fa-thumbs-up"></i></span> &nbsp;&nbsp;&nbsp; <strong>{{success}}</strong>
                                                                    </div>
                                                                </div>                                             
                                                        {{/if}}    
                                                        {{#if notReg}}
                                                                <div class="alert alert-danger d-flex align-items-center"  role="alert">
                                                                    <div class="input-group">
                                                                        <span><i class="fa-solid fa-triangle-exclamation"></i></span> &nbsp;&nbsp;&nbsp; <strong>{{notReg}} Click here to <a href="/register">sign up</a> </strong>
                                                                    </div>
                                                                </div>                                             
                                                        {{/if}}    
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="inputGroup-sizing-default">Email Address </span>
                                            
                                            <input type="email" name="email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="{{email}}">
                                        </div>                                         
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="inputGroup-sizing-default">Verification Code</span>
                                            <input type="text" name="verification_code" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Enter Code" required>
                                        </div>
                                        <button class="btn btn-info" type="submit" style="width: 100%;">Verify</button>
                                        </form>      
                                        <br><br>
                                        <form action="/auth/verify-email" method="POST">
                                        <input type="hidden" name="email" value="{{email}}">
                                        <strong><button class="btn btn-warning" type="submit">Resend Code</button>
                                        </form>
