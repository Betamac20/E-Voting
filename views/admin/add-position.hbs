<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

</head>

<body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        {{> adminnavbar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- style="background-color:#012840;" --}}
                <nav class="navbar navbar-expand navbar-light bg-light topbar mb-4 static-top shadow" > 


                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"> {{#each userData}} {{ name }}  {{/each}}</span>
                                {{#each userData}}
                                <img class="img-profile rounded-circle" src="/{{ user_avatar }} ">
                                {{/each}}
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/admin-profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                    
                    <h1 class="h3 mb-0 text-warning "> <strong>Position </strong></h1> 
                    {{#if success}}
                    <div class="alert alert-success alert-dismissible fade-out"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i></strong>
                    {{ success }}
                    </div>
                    {{/if}}
                    {{#if message}}
                    <div class="alert alert-danger alert-dismissible fade-out"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i></strong>
                    {{ message }}
                    </div>
                    {{/if}}
                    </div>
                
                    <!-- Content Row -->
                    
                    <div class="row">

                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fa-solid fa-user-plus fa-sm fa-fw mr-2"></i>Add Position</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body text-dark">
                                         
                                        <div class="row">
                                            {{!-- <form action="/auth/admin-search-candidate" method="POST"> --}}
                                            <div class="col-xl-4 ">
                                                <div class="col-xl-12 col-lg-7 py-2 " >
                                                <div class="card shadow h-100 py-2 bg-info">
                                                    <div class="card-body ">
                                                        <div class="text-sm font-weight-bold text-white text-uppercase mb-3">ADD POSITION</div>
                                                        <br>
                                                            <div class="col mb-3">
                                                                <div class="text-xs font-weight-bold text-white text-uppercase">Position:  <i class="text-danger float-right"></i></div>
                                                                <input type="text" class="form-control">            
                                                            </div>
                                                            <div class="col mb-3">
                                                                <div class="text-xs font-weight-bold text-white text-uppercase">Number of candidates per position:  <i class="text-danger float-right">{{#if message}} Please enter a valid Student ID {{/if}}</i>  </div>
                                                                <input type="text" class="form-control">            
                                                            </div>
                                                            <div class="col mb-4">
                                                                <div class="text-xs font-weight-bold text-white text-uppercase">vote per user:  <i class="text-danger float-right">{{#if message}} Please enter a valid Student ID {{/if}}</i>  </div>
                                                                <input type="text" class="form-control">            
                                                            </div>
                                                            <div class="col mt-3">
                                                                <button type="button" class="btn btn-success" style="width: 100%;">Add</button>
                                                            </div>
                                                            

                                                    </div>
                                                </div>
                                            </div>
                                            </div> 
                                            {{!-- </form> --}}
                                            <div class="col-xl-8">

                                            {{#each positionData}}
                                            <div class="col-xl-12 col-lg-7 py-2">
                                                <div class="card border-left-warning shadow h-100 py-2">
                                                    <div class="card-body">
                                                        <div class="row no-gutters align-items-center">
                                                            <div class="col mr-2">
                                                                <i class="text-danger float-right"> 
                                                                    <button class="btn btn-info"> <i class="fa-solid fa-eye"></i> </button>
                                                                    <button class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></button>
                                                                    <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                                                                </i>  
                                                                <div class="text-lg font-weight-bold text-info text-uppercase mb-1">Position: <strong class="text-danger"> {{ position }} </strong></div>
                                                                <div class="h6 mb-0 font-weight-bold  text-uppercase text-info float-center"><sup>Number of candidates per position:  <strong class="text-danger"> {{ number_per_position }} </strong> </sup></div>
                                                                <div class="h6 mb-0 font-weight-bold  text-uppercase text-info float-center"><sup>vote per user: <strong class="text-danger"> {{ vote_per_user }} </strong></sup></div>
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{/each}}

                                            </div>
                                                                                        
                                        </div>
                                        
                                        
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End Content Row -->
                    <!-- Content Row -->
                    
                    
                    <!-- Content Row -->

                    
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; E-VOTING 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->



    <script>

        var date = new Date();
        var day = date.getDate();
        var month = (date.getMonth())+1;
        var year = date.getUTCFullYear();

        if (day < 10) {
            day = "0"+day;
        }

        if (month < 10) {
            month = "0"+month;
        }

        var minDate = year+"-"+month+"-"+day;


        document.getElementById("election_start_date").setAttribute('min', minDate);
        document.getElementById("election_end_date").setAttribute('min', minDate);

        console.log(minDate);

    </script>

</body>

</html>