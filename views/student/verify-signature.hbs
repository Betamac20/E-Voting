<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>E - VOTING</title>

    <!-- Custom fonts for this template-->
    <link href="/template/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/template/css/sb-admin-2.min.css" rel="stylesheet">

    <script src="https://kit.fontawesome.com/4d231c993f.js" crossorigin="anonymous"></script>

</head>

<body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" id="accordionSidebar" style="background-color:#012840;">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center text-warning justify-content-center" href="/home">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fa-brands fa-slack"></i>
                </div>
                <div class="sidebar-brand-text mx-3"> E - VOTING</sup></div>
            </a>

            <!-- Divider -->
            {{!-- <hr class="sidebar-divider my-0"> --}}


            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading text-warning">
                Dashboard
            </div>

            <!-- Nav Item - How to vote -->
            <li class="nav-item " >
                <a class="nav-link " href="/home">
                    <i class="fa-solid fa-table-list"></i>
                    <span>How to vote</span></a>
            </li>

            <!-- Nav Item - Vote now -->
            <li class="nav-item active">
                <a class="nav-link" href="/vote">
                    <i class="fa-solid fa-check-to-slot"></i>
                    <span>Vote now</span></a>
            </li>

            <!-- Nav Item - Ballot -->
            <li class="nav-item">
                <a class="nav-link" href="/ballot">
                    <i class="fa-solid fa-receipt"></i>
                    <span>Ballot</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>


        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- style="background-color:#012840;" --}}
                <nav class="navbar navbar-expand navbar-light bg-light topbar mb-4 static-top shadow" > 


                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{#each userData}} {{ name }}  {{/each}}</span>
                                {{#each userData}}
                                <img class="img-profile rounded-circle" src="/{{ user_avatar }} ">
                                {{/each}}
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                       <h1 class="h3 mb-0 text-warning "> <strong>Vote Now</strong></h1> 
                    </div>

                    <!-- Content Row -->

                    <div class="row">
                        
                        <!-- President Area -->
                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4" style="color: #04668C;">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fa-solid fa-user"></i> President</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="row">
                                        
                                        {{#each allData}}
                                        <div class="col-xl-3">
                                            <div class="card" style="color: #04668C;">
                                                
                                                    <img class="card-img-top" src="/img/{{candidate_image}}" alt="Card image" style="width:100%">
                                                    <div class="card-body">
                                                    <h4 class="card-title">{{ candidate_name }}</h4>
                                                    <p class="card-text">Some example text some example text. {{ candidate_name }} is running for president</p>
                                                    <a href="#" class="btn btn-info" data-toggle="modal" data-target="#candidateProfile">View</a>

                                                    
                                                    </div>
                                                </div>
                                                <br>
                                        </div>
                                        {{/each}}

                                    </div>  
                                    <br>
                                    <form action="/auth/cast-vote" method="POST">
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <select class="form-control" name="candidate_president" required>
                                                <option value="">Choose your desire candidate for Presidential Position...</option>
                                                {{#each allData}}
                                                <option value="{{ id }}">{{ candidate_name }}</option>
                                                {{/each}}
                                                </select>
                                                <br>
                                        </div>
                                        <div class="col-xl-6">
                                            
                                            <button class="btn btn-info" type="submit" style="width: 100%">Vote</button>
                                        </div>
                                    </div>  
                                    </form>                                 
                                </div>
                            </div>
                        </div>

                        
                    </div>

                    <!-- Content Row -->
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; E-VOTING 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>



    <!-- Candidates profile Modal-->
    
    <div class="modal fade" id="candidateProfile" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <form action="/auth/cast-vote" method="POST">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h4 class="modal-title text-danger" id="exampleModalLabel"><strong>Selected Candidates</strong></h4>
                   
                </div>
                <div class="modal-body">

                    
                    <br>
                    {{#each oneData}}

                    <img src="/img/{{candidate_image}}" width="80%" class="img-thumbnail shadow-lg p-3 mb-5 rounded mx-auto d-block">
                    <br><br>
                    <h4> <strong>Name:</strong> {{ candidate_name }}</h4>
                    <hr class="sidebar-divider">
                                      
                        {{/each}}
                    <br>
                    <div class="alert alert-info text-justify" role="alert">
                      <strong>Reminder: </strong>In this phase, you can cancel your vote to your selected candidate. But once you submitted and signed with your Digital Private Key, your vote will be permanent and never be change.
                    </div>
                    <div class="alert alert-info text-justify" role="alert">
                      <strong>Private Key: </strong>Private Key is located at your profile. You can copy and paste it here. 
                    </div>
                    <br><br>                    
                    
                    Enter Private Key:
                    <input type="text" class="form-control" name="private_key" required>
                    {{#each oneData}}
                    <input type="hidden" value="{{ position_id }}" name="position_id">
                    <input type="hidden" value="{{ candidate_name }}" name="candidate_name">
                    <input type="hidden" value="{{ id }}" name="candidate_id">
                    {{/each}}
                    
                    
                    <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
                        <label class="form-check-label text-info" for="flexCheckDefault">
                            Agree and Sign
                        </label>
                    </div>
                    <br>
                    <center>
                        <b class="text-danger">Please do not share your Private Key to others. <br> Otherwise, your vote will be invalid.</b>
                    </center>
                    
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" type="submit" >Submit Vote</button>
                    <a href="/vote"><button class="btn btn-danger" type="button" >Cancel</button></a>
                </div>
            </div>
        </div>
        </form>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/template/vendor/jquery/jquery.min.js"></script>
    <script src="/template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/template/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/template/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/template/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/template/js/demo/chart-area-demo.js"></script>
    <script src="/template/js/demo/chart-pie-demo.js"></script>

    <script type="text/javascript">
    $(window).on('load', function() {
        $('#candidateProfile').modal('show');    
    });
</script>

</body>

</html>