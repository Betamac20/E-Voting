<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

</head>

<body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        {{> adminnavbar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- style="background-color:#012840;" --}}
                <nav class="navbar navbar-expand navbar-light bg-light topbar mb-4 static-top shadow" > 


                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"> {{#each userData}} {{ name }}  {{/each}}</span>
                                {{#each userData}}
                                <img class="img-profile rounded-circle" src="/{{ user_avatar }} ">
                                {{/each}}
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/admin-profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                    
                    <h1 class="h3 mb-0 text-warning "> <strong>Create Election</strong></h1> 
                    {{#if success}}
                    <div class="alert alert-success alert-dismissible fade-out"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i></strong>
                    {{ success }}
                    </div>
                    {{/if}}
                    {{#if message}}
                    <div class="alert alert-danger alert-dismissible fade-out"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i></strong>
                    {{ message }}
                    </div>
                    {{/if}}
                    </div>
                
                    <!-- Content Row -->
                    <form action="/auth/admin-create-election" method="POST">
                    <div class="row">

                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fa-solid fa-circle-info fa-sm fa-fw mr-2"></i>Election Information </h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body text-dark">
                                        <div class="row">
                                            <div class="col-xl-6 col-lg-7 py-3">
                                                <div class="card border-left-info shadow h-100 py-2">
                                                    <div class="card-body">
                                                        <div class="row no-gutters align-items-center">
                                                            <div class="col mr-2">
                                                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Title of Election </div>
                                                                    <input type="text" name="election_title" class="form-control" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <div class="col-xl-6 col-lg-7 py-3">
                                            <div class="card border-left-info shadow h-100 py-2">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Department <b class="text-danger float-right">{{#if message}} The department you selected has already scheduled for election. {{/if}} </b> </div>
                                                                <div class="form-group">
                                                                <select class="form-control" name="election_department" required>
                                                                    <option value="">Choose Department</option>
                                                                    {{#each departmentData}}
                                                                    <option value="{{department_name}}">{{department_name}}</option>
                                                                    {{/each}}
                                                                </select>
                                                                </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End Content Row -->
                    <!-- Content Row -->

                    <div class="row">
                        
                        <!-- Election -->
                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fa-solid fa-square-plus fa-sm fa-fw mr-2"></i>Election Schedule </h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body text-dark">

                                    <div class="row">

                                        <div class="col-xl-6 col-lg-7 py-3">

                                            <div class="card border-left-primary shadow h-100 py-2">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Start Date  </div>
                                                                <input type="date" id="election_start_date" name="election_start_date" class="form-control" required>
                                                        </div>
                                                        <div class="col-auto">
                                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            

                                        </div>
                                        <div class="col-xl-6 col-lg-7 py-3">

                                            <div class="card border-left-primary shadow h-100 py-2">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Start Time</div>
                                                                <input type="time" name="election_start_time"  class="form-control" required>
                                                        </div>
                                                        <div class="col-auto">
                                                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        
                                        <div class="col-xl-6 col-lg-7 py-3">

                                            <div class="card border-left-danger shadow h-100 py-2">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">End Date</div>
                                                                <input type="date" id="election_end_date" name="election_end_date" class="form-control" required>
                                                        </div>
                                                        <div class="col-auto">
                                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            

                                        </div>
                                        <div class="col-xl-6 col-lg-7 py-3">

                                            <div class="card border-left-danger shadow h-100 py-2">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">End Time </div>
                                                                <input type="time" name="election_end_time" class="form-control" required>
                                                        </div>
                                                        <div class="col-auto">
                                                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        
                                    </div> {{!-- end of row --}}
                                <button type="submit" class="btn btn-success float-right shadow py-2" style="width: 100%;"><i class="fa-solid fa-check-to-slot"></i> &nbsp; Create Election</button>   
                                </div>
                                
                            </div>
                        
                                
                        
                        </div>
                    </div>
                    </form>
                    
                    <!-- Content Row -->

                    
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; E-VOTING 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script>

        var date = new Date();
        var day = date.getDate();
        var month = (date.getMonth())+1;
        var year = date.getUTCFullYear();

        if (day < 10) {
            day = "0"+day;
        }

        if (month < 10) {
            month = "0"+month;
        }

        var minDate = year+"-"+month+"-"+day;


        document.getElementById("election_start_date").setAttribute('min', minDate);
        document.getElementById("election_end_date").setAttribute('min', minDate);

        console.log(minDate);

    </script>

</body>

</html>