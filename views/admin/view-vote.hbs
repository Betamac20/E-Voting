<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>E - VOTING</title>

    <!-- Custom fonts for this template-->
    <link href="/template/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/template/css/sb-admin-2.min.css" rel="stylesheet">

    <script src="https://kit.fontawesome.com/4d231c993f.js" crossorigin="anonymous"></script>

</head>

<body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        {{> adminnavbar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{!-- style="background-color:#012840;" --}}
                <nav class="navbar navbar-expand navbar-light bg-light topbar mb-4 static-top shadow" > 


                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"> {{#each userData}} {{ name }}  {{/each}}</span>
                                {{#each userData}}
                                <img class="img-profile rounded-circle" src="/{{ user_avatar }} ">
                                {{/each}}
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/admin-profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 ">
                       <h1 class="h3 mb-0 text-warning "> <strong>Dashboard</strong></h1> 
                    </div>

<div class="row">
                        
                        <!-- Election Area -->
                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fa-solid fa-check-to-slot fa-sm fa-fw mr-2"></i> Election</h6>
                                    <a href="/admin-election"><button class="btn btn-info btn-sm">View All</button></a>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body text-dark">

                                    <div class="row">
                                        
                                        {{#each electionData}}
                                        <div class="col-xl-12 col-md-12 mb-2">
                                        {{!-- <form action="auth/admin-view-vote" method="POST"> --}}
                                        
                                            <div class="card border-left-success shadow h-100">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-sm font-weight-bold text-danger text-uppercase"> {{ election_department }} <i class="float-right"> <form action="/auth/admin-election-edit" method="POST"> <input type="hidden" value="{{ id }}" name="election_id" > <button type="submit" class="btn float-right text-primary"><i> View </i></button></form> </i> </div>
                                                                <div class="h6 mb-0 font-weight-bold  text-uppercase text-secondary float-center"><sup>Start Date: {{dateFormat election_start_date_time "ddd, MMMM Do YYYY, h:mm:ss A"}}</sup></div>
                                                        </div>
                                                        <div class="col-auto">
                                                            <i class="fas fa-user fa-2x text-gray-300"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {{!-- </form> --}}
                                        </div>
                                        {{/each}}
                                        
                                        
                                        
                                    </div> {{!-- end of row --}}
                                   
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Row -->

                    <div class="row">
                        
                        <!-- President Area -->
                        <div class="col-xl-12 col-lg-7">
                            <div class="card text-white shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #04668C;">
                                    <h6 class="m-0 font-weight-bold" ><i class="fas fa-users fa-sm fa-fw mr-2"></i> Candidates</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body text-dark">

                                    <div class="row">
                                        
                                        
                                        {{#each votingData}}
                                        <div class="col-xl-6 col-md-6 mb-4">
                                            <div class="card border-left-primary shadow h-100 py-2">
                                                <div class="card-body">
                                                    <div class="row no-gutters align-items-center">
                                                        <div class="col mr-2">
                                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Anonymous Candidate  <input type="hidden" name="candidate_id" value="{{ candidate_id }}"> <button type="submit" class="btn float-right text-primary"><i> View </i></button> </div>
                                                                {{!-- <div class="progress mb-3">
                                                                    <div class="progress-bar bg-info" role="progressbar" style="width: 20%"
                                                                        aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                                                </div> --}}
                                                                <div class="h6 mb-0 font-weight-bold text-info float-center">{{ sum_vote }} <sup> VOTE(S)</sup></div>

                                                        </div>
                                                        <div class="col-auto">
                                                            <i class="fas fa-user fa-2x text-gray-300"></i>
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                        
                                        
                                        
                                    </div> {{!-- end of row --}}
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Content Row -->
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; E-VOTING 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

<!-- Candidates profile Modal-->
    
    <div class="modal fade" id="candidateProfile" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <form>
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h4 class="modal-title text-danger" id="exampleModalLabel"><strong>View Candidate</strong></h4>
                   
                </div>
                <div class="modal-body">
                    <br>
                <div class="row">
                                        
                    <div class="col-xl-12 col-md-12 mb-12">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Anonymous Candidate <i class="float-right">  {{#if percentageData }} {{ percentageData }}% {{/if}}</i> </div>
                                            <div class="progress mb-3">
                                            
                                            <div class="progress-bar bg-info" role="progressbar" style="width: {{#if percentageData }}{{ percentageData }}{{/if}}%"
                                                    aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            
                                            <div class="h6 mb-0 font-weight-bold text-primary float-center">{{#each candidateData }}{{ sum_vote }} {{/each}}<sup> VOTE(S)</sup> <i class="float-right text-xs">Total User: {{#if totalUser }} {{ totalUser }} {{/if}}</i></div>

                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user fa-2x text-gray-300"></i>
                                        
                                    </div>                                                        
                                </div>
                            </div>
                        </div>
                    </div>
                                        
                                        
                </div>          
                </div>
                <div class="modal-footer">
                    <a href="/admin-home"><button class="btn btn-secondary" type="button" >Back</button></a>
                </div>
            </div>
        </div>
        </form>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/template/vendor/jquery/jquery.min.js"></script>
    <script src="/template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/template/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/template/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/template/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/template/js/demo/chart-area-demo.js"></script>
    <script src="/template/js/demo/chart-pie-demo.js"></script>

    <script type="text/javascript">
        $(window).on('load', function() {
            $('#candidateProfile').modal('show');
            
        });
    </script>

</body>

</html>